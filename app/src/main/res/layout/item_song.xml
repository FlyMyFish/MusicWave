<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="@color/colorAssistantText"
        android:textSize="@dimen/songSheetFrom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/songName"
        app:layout_constraintBottom_toTopOf="@+id/tv_song_singer"
        app:layout_constraintLeft_toRightOf="@id/tv_position"
        app:layout_constraintTop_toTopOf="@id/tv_position" />

    <TextView
        android:id="@+id/tv_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAssistantText"
        android:textSize="@dimen/songSinger"
        app:layout_constraintBottom_toBottomOf="@id/tv_position"
        app:layout_constraintLeft_toLeftOf="@id/tv_song_name"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name" />

    <TextView
        android:id="@+id/tv_song_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorAssistantText"
        android:textSize="@dimen/songSinger"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_song_singer" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/windowBackgroundColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_position" />
</android.support.constraint.ConstraintLayout>